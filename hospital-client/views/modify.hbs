<div class="jumbotron border border-success bg-light">
    
            {{#doctors}}
    <form action="" method="POST">
        <fieldset>

            <label>Public Key : </label>
            <input type="text" id ="id" name="id" value="{{publickey}}" placeholder="{{publickey}}" disabled>
            <br><br>
            <label>Register Number : </label>
            <input type="text" name="regNo" id="regNo" value="{{registerNo}}" placeholder="{{registerNo}}" >
            <br><br>
            <label>Doctor Name : </label>
            <input type="text" name="doctorName" id="doctorName" value="{{doctorName}}" placeholder="{{doctorName}}">
            <br><br>
            <label>Department : </label>
            <input type="text" id="area" list="areas" value="{{department}}" placeholder="{{department}}"  required/>    
                <datalist id="areas">
                    <option value="General Physician">
                    <option value="Cardiology">
                    <option value="Neurology">
                    <option value="Orthopaedics">
                    <option value="Oncology">
                    <option value="Pediatrics">
                    <option value="Ophthalmology">
                    <option value="Otolaryngology">   
                    <option value="Nutrition and Dietetics">
                </datalist>
            <br><br>
            <label>Hospital Name : </label>
            <input type="text" name="hospitalName" id="hospitalName" value="{{hospitalName}}" placeholder="{{hospitalName}}">
            <br><br>
            <label>Contact Number : </label>
            <input type="text" name="contactNo" id="contactNo" value="{{contactNo}}" placeholder="{{contactNo}}" >
            <br><br>
            <input type="submit" value="Update Details" onclick="updateDoctor(event)">
            <br><br>
            
        </fieldset>
    </form>    
{{/doctors}}
</div>
</div>
<script src="/javascripts/main.js"></script>
 </body>

</html>